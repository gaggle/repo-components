{
  "name": "repo-components",
  "version": "0.0.0",
  "license": "ISC",
  "main": "build/index.js",
  "scripts": {
    "build": "babel src -d build --no-comments --compact true --minified -s true && styleguidist build",
    "clean": "rm -rf build/ coverage/ node_modules/.cache/ styleguide/",
    "dev": "babel src -w -d build",
    "styleguide": "styleguidist server",
    "test": "jest --no-cache --silent --coverage"
  },
  "dependencies": {
    "next": "^7.0.2",
    "react": "^16.6.3",
    "react-dom": "^16.6.3"
  },
  "devDependencies": {
    "@babel/cli": "^7.1.2",
    "@babel/core": "^7.1.2",
    "@babel/plugin-proposal-class-properties": "^7.1.0",
    "@babel/plugin-proposal-export-default-from": "^7.0.0",
    "@babel/plugin-proposal-object-rest-spread": "^7.0.0",
    "@babel/plugin-syntax-class-properties": "^7.0.0",
    "@babel/plugin-transform-modules-commonjs": "^7.1.0",
    "@babel/preset-react": "^7.0.0",
    "date-fns": "^1.29.0",
    "enzyme": "^3.7.0",
    "enzyme-adapter-react-16": "^1.7.0",
    "github-colors": "^2.2.17",
    "jest": "^23.6.0",
    "lodash": "^4.17.11",
    "object-path": "^0.11.4",
    "prop-types": "^15.6.2",
    "react-ionicons": "^2.1.6",
    "react-masonry-component": "^6.2.1",
    "react-styleguidist": "^8.0.6",
    "styled-jsx": "^3.1.2",
    "webpack": "^4.26.1"
  },
  "babel": {
    "plugins": [
      "styled-jsx/babel",
      "@babel/plugin-proposal-class-properties",
      "@babel/plugin-syntax-class-properties",
      "@babel/plugin-transform-modules-commonjs",
      "@babel/plugin-proposal-object-rest-spread",
      "@babel/plugin-proposal-export-default-from"
    ],
    "presets": [
      "@babel/preset-react"
    ]
  },
  "jest": {
    "setupTestFrameworkScriptFile": "<rootDir>tests/setupEnzyme.js",
    "testPathIgnorePatterns": [
      "<rootDir>/tests/setup/"
    ],
    "collectCoverageFrom": [
      "src/**/*"
    ],
    "coverageReporters": [
      "lcov",
      "text",
      "html"
    ]
  }
}
